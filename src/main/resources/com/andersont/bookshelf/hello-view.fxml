<HBox prefHeight="450.0" prefWidth="804.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andersont.bookshelf.HelloController">
   <children>
      <VBox prefWidth="200.0">
         <children>
            <MenuBar VBox.vgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="Shelf">
                  <items>
                    <MenuItem fx:id="createBook" mnemonicParsing="false" text="Create Book" />
                        <MenuItem mnemonicParsing="false" text="Create Shelf" />
                        <MenuItem mnemonicParsing="false" text="Delete Shelf" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Options">
                  <items>
                        <CheckMenuItem mnemonicParsing="false" text="Dark Theme" />
                        <MenuItem mnemonicParsing="false" text="Import Data" />
                        <MenuItem mnemonicParsing="false" text="Export Data" />
                        <Menu mnemonicParsing="false" text="Autofill">
                          <items>
                              <CheckMenuItem mnemonicParsing="false" text="Off" />
                              <CheckMenuItem mnemonicParsing="false" text="openlibrary" />
                          </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ListView VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <GridPane prefHeight="450.0" prefWidth="606.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </children>
</HBox>
